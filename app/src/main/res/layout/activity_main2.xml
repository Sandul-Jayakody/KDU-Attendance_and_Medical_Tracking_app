<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity"

    android:background = "#9CB1E6">

    <Button
        android:id="@+id/overallattendance"
        android:layout_width="375dp"
        android:layout_height="71dp"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"

        android:layout_marginTop="100dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/sub6_bg"
        android:text="@string/overall_attendance"
        android:textColor="#000000"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="13dp"
        tools:layout_editor_absoluteY="28dp" />

    <Button
        android:id="@+id/subattendance"
        android:layout_width="375dp"
        android:layout_height="71dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="91dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:background="@drawable/sub6_bg"
        android:text="@string/subject_attendance"
        tools:layout_editor_absoluteX="13dp"
        tools:layout_editor_absoluteY="88dp" />

    <Button
        android:id="@+id/medtrack"
        android:layout_width="375dp"
        android:layout_height="71dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="20dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginRight="0dp"

        android:background="@drawable/sub6_bg"
        android:text="@string/medical_tracking"
        tools:layout_editor_absoluteX="13dp"
        tools:layout_editor_absoluteY="148dp" />

    <Button
        android:id="@+id/profile"
        android:layout_width="375dp"
        android:layout_height="71dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="20dp"

        android:layout_marginRight="0dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:background="@drawable/sub6_bg"
        android:text="@string/profile"
        tools:layout_editor_absoluteX="13dp"
        tools:layout_editor_absoluteY="208dp" />

</RelativeLayout>